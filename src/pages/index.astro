---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Offers from '../components/Offers.astro';
import Testimonials from '../components/Testimonials.astro';
import HeroFooter from '../components/HeroFooter.astro';
import IndexLayout from '../layouts/IndexLayout.astro';
---

<IndexLayout title="Dropstars" footerCallToAction='Jetzt kontaktieren'>
	<Hero title="Dropstars" instagramUrl="https://www.instagram.com/dropstars_innsbruck" facebookUrl='https://www.facebook.com/dropstarsinnsbruck'/>
	<About linkText="Jetzt mitmachen" imageOne='shooting_2.jpg', imageTwo='shooting_7.jpg' link="/kontakt" title="FlagFootball made in Innsbruck" text="Wir, die Dropstars Innsbruck, sind eine bunte Truppe von Spielerinnen und Spielern unterschiedlicher Altersklassen. Wenn auch Du mal eine neue Sportart ausprobieren möchtest oder sogar schon Erfahrung und Spaß am Flag Football hast, melde Dich jederzeit bei uns. Wir freuen uns, dich kennenzulernen!" />
	<Offers offers={[
			{
				imageURL:"shooting_1.jpg",
				offerText:"Was ist FlagFootball?",
				bgPositionTop: true,
				link: '/was-ist-flagfootball',
			},
			{
				imageURL:"team.jpg",
				offerText:"Wer wir sind",
				bgPositionTop: false,
				link: '/wer-wir-sind',
			},
			{
				imageURL:"shooting_5.jpg",
				offerText:"Kontakt",
				bgPositionTop: false,
				link: '/kontakt',
			}
		]}
	/>
</IndexLayout>

