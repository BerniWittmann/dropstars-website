---
import DropstarsText from './DropstarsText.astro';

interface Props {
  callToAction?: string;
}

const { callToAction } = Astro.props;
const imageURL = "field.jpg";
const bgStyle = { backgroundImage: `url('/images/${imageURL}')` };
const content = [
  {
    heading: "E-Mail",
    data: [{
      text: "info@dropstars.at",
      link: 'mailto:info@dropstars.at',
    }]
  },
  {
    heading: "Telefon",
    data: [{
      text: "+43 660 32 174 30",
      link: 'tel:+436603217430',
    }]
  },
  {
    heading: "Links",
    data: [{
      text: "Impressum",
      link: '/impressum',
    }, {
      text: "Instagram",
      link: 'https://www.instagram.com/dropstars_innsbruck',
    }, {
      text: "Facebook",
      link: 'https://www.facebook.com/dropstarsinnsbruck',
    }]
  },
];
---

<footer
  class="bg-cover bg-no-repeat bg-gray-700 bg-blend-multiply snap-end bg-bottom md:bg-[center_bottom_-10rem]"
  style={bgStyle}
>
  <div class="mx-auto container">
    { callToAction ? <h1
      class="text-5xl blueText uppercase italic py-28 md:py-36 w-full text-center"
    >
      <DropstarsText text={callToAction} ></DropstarsText>
    </h1> : null }
    <section class="grid grid-cols-1 md:grid-cols-3">
      {
        content.map((item) => (
          <div class="p-12">
            <h1 class="uppercase text-2xl italic text-white">{item.heading}</h1>
            { item.data.map((element) => (
              <a href={element.link}><p class="text-white">{element.text}</p></a>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</footer>
