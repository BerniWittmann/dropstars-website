---
import { SEO } from 'astro-seo';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title?: string;
	seoTitle?: string;
}

const { title = "DropStars", seoTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Flag Football Team aus Innsbruck" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Numans&family=Coda:wght@400;800&display=swap" rel="stylesheet">
<meta name="generator" content={Astro.generator} />
		<script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta name="theme-color" content="#141414" />
		<SEO
			title={seoTitle}
			description='Flag Football Team aus Innsbruck'
			titleDefault='DropStars'
			titleTemplate="%s | DropStars"
			openGraph={{
				basic: {
					title: seoTitle ?? title,
					type: "website",
					image: "https://dropstars.at/images/logo.png"
				},
				optional: {
					locale: "de_AT",
				}
			}}
		/>
		<ViewTransitions />
	</head>
	<body class="flex-col flex min-h-screen bg-background">
		<slot />
	</body>
</html>
<style is:global>
	section{
		
	}
	h1, h2,li, .bigFont {
		font-family: 'Coda', 'sans-serif';
		font-weight: 800;
	}
	p{
		font-family: 'Numans','sans-serif';
		font-weight: 400;
	}
	.blueBG{
		background-color:#0A234E;
	}
	.blueText{
		color:#0A234E;
	}
	.dropstars-button {
		color: #0A234E;
		background-color: white;
		border: 2px solid #CA3939;
		transition: all 200ms ease-in-out;
	}
	.dropstars-button:hover, .dropstars-box:focus {
		border-width: 4px;
		scale: 1.1;
	}
    .dropstars-text {
      position: relative;
	  z-index: 0;
      -webkit-text-stroke: 5px #CA3939;
      text-stroke: 5px #CA3939;
    }
    .dropstars-text::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: #0A234E;
      -webkit-text-stroke:  2px white;
      text-stroke: 2px white;
    }
</style>
