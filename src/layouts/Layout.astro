---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Anton&family=Hanken+Grotesk:wght@300;400&display=swap" rel="stylesheet">	<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>

	</head>
	<body class="flex-col flex min-h-screen">
		<slot />
	</body>
</html>
<style is:global>
	section{
		background-color: #141414;
	}
	h1, h2,li{
		font-family: 'Anton', 'sans-serif';
	}
	p{
		font-family: 'Hanken Grotesk','sans-serif';
	}
	.blueBG{
		background-color:#0A234E;
	}
	.blueText{
		color:#0A234E;
	}
	.dropstars-button {
		color: #0A234E;
		background-color: white;
		border: 2px solid #CA3939;
		transition: all 200ms ease-in-out;
	}
	.dropstars-button:hover, .dropstars-box:focus {
		border-width: 4px;
		scale: 1.1;
	}
    .dropstars-text {
      position: relative;
	  z-index: 0;
      -webkit-text-stroke: 5px #CA3939;
      text-stroke: 5px #CA3939;
    }
    .dropstars-text::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: #0A234E;
      -webkit-text-stroke:  2px white;
      text-stroke: 2px white;
    }
</style>
