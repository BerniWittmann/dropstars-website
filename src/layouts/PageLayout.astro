---
import PageHero from '../components/PageHero.astro';
import HeroFooter from '../components/HeroFooter.astro';
import Layout from '../layouts/Layout.astro';
interface Props {
	title: string;
    frontmatter: {
        title: string;
    };
}

const { title, frontmatter } = Astro.props;
---

<Layout title={title}>
    <PageHero title={title ?? frontmatter.title}/>
    <section class="flex-1">
        <div class="container text-white mx-auto p-4 pt-16 pb-24 prose lg:prose-xl prose-headings:text-white prose-a:text-white">
         <slot />
        </div>  
    </section>
    <HeroFooter />
</Layout>